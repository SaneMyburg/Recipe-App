<div class="container mt-5">
  <h2 class="text-center mb-4">Add New Ingredient</h2>

  <% if flash[:error].present? %>
    <div class="alert alert-danger">
      <%= flash[:error] %>
    </div>
  <% end %>

  <%= form_with(model: [@recipe, @recipe_food], local: true, class: "w-100") do |form| %>
    <div class="mb-3">
      <%= form.label :food_id, "Food", class: "form-label font-weight-bold" %>
      <%= form.collection_select :food_id, @foods, :id, :name, { prompt: "Select food item" }, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= form.label :quantity, "Quantity", class: "form-label font-weight-bold" %>
      <%= form.number_field :quantity, class: "form-control" %>
    </div>

    <div class="d-flex justify-content-between gap-4">
      <%= form.submit "Add Ingredient", class: "btn btn-primary" %>
      <%= link_to "Cancel", recipe_path(@recipe), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
