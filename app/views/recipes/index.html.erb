<div class="container">
  <h2 class="mb-4 font-bold text-center">Recipes</h2>
  <% if user_signed_in? %>
      <%= link_to 'Create New Recipe', new_recipe_path, class: "btn btn-outline-info mb-4 float-end" %>
    <% end %>

  <% if @recipes.any? %>
    <ul class="list-group">
      <% @recipes.each do |recipe| %>
        <li class="list-group-item mb-4">
          <div class="d-flex justify-content-between">
            <div class="d-flex flex-column">
              <h6><%= link_to recipe.name, recipe_path(recipe), class: 'text-primary text-decoration-none recipe-name' %></h6>
              <% if recipe.user == current_user %>
                <%= button_to 'Remove', recipe, method: :delete, data: { confirm: 'Are you sure you want to delete this recipe?' }, class: 'btn btn-danger btn-sm align-self-start' %>
              <% end %>
            </div>
            <div class="flex-grow-1">
              <p class="text-muted custom-description-width"><%= recipe.description %></p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>

  <% else %>
    <p class="text-muted">No recipes found.</p>
  <% end %>
</div>
