<div>
  <h1>Recipes</h1>
  <% if user_signed_in? %>
    <%= link_to 'Create New Recipe', new_recipe_path %>
  <% end %>

  <% if @recipes.any? %>
    <ul>
      <% @recipes.each do |recipe| %>
        <li>
          <div>
            <h2><%= link_to recipe.name, recipe_path(recipe) %></h2>
          <p><%= recipe.description %></p>
          </div>
            <% if recipe.user == current_user %>
              <%= button_to 'Remove', recipe, method: :delete, data: { confirm: 'Are you sure you want to delete this recipe?' } %>
            <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No recipes found.</p>
  <% end %>
</div>